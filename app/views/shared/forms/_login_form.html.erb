<%= form_tag :session do %>
  <table>
    <tr>
      <th>Username</th>
      <td><%= text_field_tag "username" %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= password_field_tag "password" %></td>
    </tr>
  </table>
  <%= submit_tag "Log in" %>
  <p><%= link_to "Sign up", :new_user %></p>
  <%= hidden_field_tag "from", request.path %>
<% end %>
