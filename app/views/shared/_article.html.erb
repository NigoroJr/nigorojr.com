<div class="article">
    <h1 class="title"><%= link_to article.title, article %></h1>
    <p class="body">
    <%= article.body %>
    </p>
    <div class="author">
        <%= article.author %>
    </div>
    <div class="language">
        <%= article.language %>
    </div>
    <div class="posted_at">
        <%= article.created_at %>
    </div>
    <div class="tags">
        <%= article.tags %>
    </div>
    <div class="admin">
        <%= link_to "Edit", [:edit, article] %>
        <%= link_to "Delete", article, method: :delete, confirm: "Are you sure you want to delete this?" %>
    </div>
</div>
