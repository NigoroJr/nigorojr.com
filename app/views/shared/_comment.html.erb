<section class="comment">
  <%= "Comment from" %>
  <b class="comment_posted_by"><%= comment.name %></b>
  <%= ":" %>
  <p class="comment_body"><%= raw(convert_to_markdown(comment.body)) %></p>

  <% if @logged_in_as != nil && @logged_in_as.can_modify(comment.article) %>
    <%= link_to "Delete", comment, method: :delete, data: { confirm: "Really delete?" } %>
  <% end %>
</section>
