<% @page_title = @article.title %>

<% if !@article.is_draft %>
  <%= render "shared/article", article: @article %>
<% end %>

<% @article.comments.each do |comment| %>
  <%= render "shared/comment", comment: comment %>
<% end %>

<%= form_tag(
  {
    controller: "comments",
    action: "create",
  }
) do %>
  <%= render "shared/forms/comment_form", article_id: @article.id %>
<% end %>
