<% if @logged_in_as %>
  <%= link_to "Post new article", :new_article %>
<% end %>
<%= render "shared/language_selector" %>
<% if @articles.present? %>
  <% @articles.each do |article| %>
    <% if !article.is_draft %>
      <%= render "shared/article", article: article %>
    <% end %>
  <% end %>

<% else %>
  <h1>No article found!</h1>
<% end %>
